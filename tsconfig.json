{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "lib": ["ESNext", "DOM"],
      "strict": true,
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./",
      "paths": {
        "e2e/pages/*": ["./e2e/pages/*"]
      },
      "types": ["playwright"]
    },
    "include": ["e2e", "e2e/smoke", "playwright.config.ts"],
    "exclude": ["node_modules"]
  }  